{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "redirects": [
    { "source": "/", "destination": "/app.html", "permanent": false }
  ],
  "rewrites": [
    { "source": "/app.html", "destination": "/app.html" },
    { "source": "/login", "destination": "/index.html" },
    { "source": "/register", "destination": "/index.html" },
    { "source": "/forgot-password", "destination": "/index.html" },
    { "source": "/reset-password", "destination": "/index.html" },
    { "source": "/2fa-verify", "destination": "/index.html" },
    { "source": "/onboarding", "destination": "/index.html" },
    { "source": "/join", "destination": "/index.html" },
    { "source": "/dashboard/:path*", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/app.html" }
  ]
}
